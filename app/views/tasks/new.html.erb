<div class="home">
  <h1>New Task</h1>

  <%= form_with model: @task do |f| %>
    <p><%= f.label :title %> <%= f.text_field :title %></p>
    <p><%= f.label :details %> <%= f.text_field :details %></p>
    <p><%= f.submit class:"btn btn-primary"%></p>
  <% end %>

  <%= link_to "Return to main", tasks_path %>
</div>